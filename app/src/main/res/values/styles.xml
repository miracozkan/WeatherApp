<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="txtHour">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/bottomHour</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">96dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">96dp</item>
    </style>
    <style name="txtBottomDegree">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">26.3sp</item>
        <item name="android:textColor">@color/bottomDegree</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16sp</item>
    </style>
    <style name="imgBottomIcon">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
